<table class='data_grid data_grid_center' width='80%'>
	<thead>
		<tr><td colspan='2'>&opac.advanced.wizard.title;</td></tr>
	</thead>
	<tbody style='text-align: left'>
		<tr>
			<td>&opac.advanced.wizard.contains;</td>
			<td align='center'>
				<input type='text' size='36' id='advanced.wizard.contains'> </input>
			</td>
		</tr>
		<tr>
			<td>&opac.advanced.wizard.nocontains;</td>
			<td align='center'>
				<input type='text' size='36' id='advanced.wizard.nocontains'> </input>
			</td>
		</tr>
		<tr>
			<td>&opac.advanced.wizard.exact;</td>
			<td align='center'>
				<input type='text' size='36' id='advanced.wizard.exact'> </input>
			</td>
		</tr>
		<tr>
			<td align='center'>
				<span>&common.type;: </span>
				<!--#include virtual="../common/stypes_selector.xml"-->
			</td>
			<td align='center'>
				<span>&common.format;: </span>
				<!--#set var='FORM_SEL_ID' value='advanced.wizard.form_selector'-->
				<!--#include virtual="../common/format_selector.xml"-->
			</td>
		</tr>
		<tr>
			<td>
				<span>Sort results by </span>
				<select id='advanced.wizard.sort_by' 
					onchange='
					if(this.selectedIndex == 0) {
						$("advanced.wizard.sort_dir").disabled = true;
						$("advanced.wizard.sort_dir").selectedIndex = 0;
					} else $("advanced.wizard.sort_dir").disabled = false;'>
					<option value='rel'>Relevance</option>
					<option value='title'>Title</option>
					<option value='author'>Author</option>
					<option value='pubdate'>Publication Date</option>
				</select>
			</td>
			<td>
				<span>Sort Direction </span>
				<select id='advanced.wizard.sort_dir' disabled='disabled'>
					<option value='asc'>Ascending / A to Z</option>
					<option value='desc'>Descending / Z to A</option>
				</select>
			</td>
		</tr>
		<tr>
			<td colspan='2' align='center'>
				<input type='submit' onclick='advWizardRun();' value='&common.submit;'> </input>
			</td>
		</tr>
	</tbody>
</table>
