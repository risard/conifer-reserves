					<tr>
						<td align='right'>
							<span>Item Type</span>
							<a id='adv_global_item_type_link_adv' class='classic_link adv_adv_link'
								href='javascript:void(0);' onclick='
								hideMe($("adv_global_item_type_basic"));
								unHideMe($("adv_global_item_type"));
								hideMe(this);
								unHideMe($("adv_global_item_type_link_basic"));
								'>Advanced</a>

