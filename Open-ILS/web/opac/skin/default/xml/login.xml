<?xml version='1.0'?>

<div id='login_box' class='hide_me non_canvas' style='margin-top: 6px;'>

	<script language='javascript'>
		config.ids.login = {};
		config.css.login = {};
		config.ids.login.box			= "login_box";
		config.ids.login.username	= "login_username";
		config.ids.login.password	= "login_password";
		config.ids.login.button		= "login_button";
		config.ids.login.cancel		= "login_cancel_button";
	</script>

	<div class='login_text color_1'>
		<span>&opac.login.login;</span>
	</div>

	<br/>

	<table>
		<tbody>
			<tr>
				<td><span class='login_text'>&common.username;</span></td>
				<td>
					<span class='login_text'>
						<input id='login_username' type='text' size='16'> </input>
					</span>
				</td>
			</tr>
			<tr>
				<td>
					<span class='login_text'>&common.password;</span>
				</td>
				<td>
					<span class='login_text'>
						<input id='login_password' type='password' size='16'> </input>
					</span>
				</td>
			</tr>
			<tr><td><br/></td></tr>
			<tr>
				<td>
					<span class='login_text'>
					<a href="javascript:void(0);" id='login_button'> &common.login; </a>
					</span>
				</td>
				<td>
					<span class='login_text'>
						<a href='javascript:void(0);' id='login_cancel_button'> &common.cancel; </a>
					</span>
				</td>
			</tr>
		</tbody>
	</table>

</div>


