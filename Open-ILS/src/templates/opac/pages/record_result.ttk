[%

	# --------------------------------------------------------------------------------- 
	# This page will display a list of metarecord search results
	# --------------------------------------------------------------------------------- 
	tm = global.textmap.opac.mr_result;

	WRAPPER html/html;

		WRAPPER html/head title="Record Result Page";
			INCLUDE opac/pages/chunks/css_includes.ttk;
		END;


		WRAPPER html/body onload='pageInit(); globalPage.doSearch();';

			INCLUDE opac/pages/chunks/opac_search_bar.ttk;

			lines(1);

			# --------------------------------------------------------------------------------- 
			# Here we start the top level table for the record results
			# --------------------------------------------------------------------------------- 

			WRAPPER html/table class='hit_count_box';
				row( content = 
					cell(class='hit_count_words_box', content="Hits") _
					cell(class='hit_count_count_box', id='hit_count_count_box'));
			END;

			lines(2);


			# --------------------------------------------------------------------------------- 
			# search results are spit out into this table
			# --------------------------------------------------------------------------------- 
			table(class='record_result_box', id='record_result_box'); 

			# --------------------------------------------------------------------------------- 
			# Sidebar stuff, subjects, authors, etc.
			# --------------------------------------------------------------------------------- 

			WRAPPER html/div class='record_sidebar_wrapper_box';
				WRAPPER html/table class='record_sidebar_box';
					row(content=cell(content=box(valign='top', id='record_subject_sidebar_box')));
					row(content=cell(content=lines(1)));
					row(content=cell(content=box(valign='top', id='record_author_sidebar_box')));
				END;
			END;



			INCLUDE opac/pages/chunks/next_prev_box.ttk;
		
		END; # body

	END; # html

%]

