# ----------------------------------------------------------
# bootstrap config file
# ----------------------------------------------------------
[bootstrap]

settings_config	= /path/to/opensrf.xml
log_dir				= /path/to/log

debug					= ERROR
#debug				= INFO
#debug				= DEBUG
#debug				= INTERNAL

router_name			= router
list:domains		= router1.domain.com, router2.domain.com
username				= jabber_username
passwd				= jabber_password
port					= 5222

# --------------------------------------

[logs]
debug					= debug.log
error					= error.log
transport			= transport.log
message				= message.log
method				= method.log
trace					= trace.log
opac					= opac.log


